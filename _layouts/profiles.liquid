---
layout: page
---
<div class="post">
  <article>
    {% if page.profiles %}
      <div class="profiles-grid">
        {% for profile in page.profiles %}
          <div class="profile-card">
            {% if profile.image %}
              {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
              {% include figure.liquid
                loading="lazy"
                path=profile_image_path
                class="profile-photo"
                alt=profile.name %}
            {% endif %}

            <div class="profile-meta">
              {% if profile.name %}
                <div class="profile-name">{{ profile.name }}</div>
              {% endif %}

              {% if profile.affiliation %}
                <div class="profile-affiliation">{{ profile.affiliation }}</div>
              {% endif %}

              {% if profile.content %}
                {% capture bio %}{% include_relative {{ profile.content }} %}{% endcapture %}
                <div class="profile-bio">{{ bio | markdownify }}</div>
              {% elsif profile.bio %}
                <div class="profile-bio">{{ profile.bio | markdownify }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      {{ content }}
    {% endif %}
  </article>
</div>

<style>
/* 网格：自动适配列数 */
.profiles-grid{
  display:grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 1.25rem;
  align-items: start;
}

/* 卡片 */
.profile-card{
  border: 1px solid rgba(0,0,0,.10);
  border-radius: 16px;
  overflow: hidden;       /* 让图片圆角生效 */
  background: #fff;
  box-shadow: 0 8px 18px rgba(0,0,0,.06);
}

/* 顶部图片：占满卡片宽度，固定比例更整齐 */
.profile-photo{
  width: 100%;
  aspect-ratio: 4 / 3;    /* 你也可以改成 1/1 或 3/4 */
  object-fit: cover;
  display:block;
}

/* 文字区域 */
.profile-meta{
  padding: 1rem 1rem 1.1rem;
}

.profile-name{
  font-weight: 800;
  font-size: 1.1rem;
  line-height: 1.2;
  margin: 0 0 .25rem 0;
}

.profile-affiliation{
  font-size: .95rem;
  opacity: .85;
  margin: 0 0 .75rem 0;
}

.profile-bio{
  font-size: .95rem;
  line-height: 1.55;
}

/* 防止 markdown 里第一个段落顶太近 */
.profile-bio > :first-child{ margin-top: 0; }
.profile-bio > :last-child{ margin-bottom: 0; }
</style>