---
layout: page
---

<div class="post">
  <article>
    {% if page.profiles %}

      {%- assign categories = page.category_order -%}

      {% for c in categories %}
        <h2 class="people-section-title">{{ c }}</h2>

        <div class="people-list">
          {% for p in page.profiles %}
            {% if p.category == c %}
              <div class="person-item">
                <div class="person-avatar">
                  {% if p.image %}
                    {% assign img_path = p.image | prepend: 'assets/img/' %}
                    <img src="{{ img_path | relative_url }}" alt="{{ p.name }}" loading="lazy">
                  {% else %}
                    <div class="avatar-placeholder"></div>
                  {% endif %}
                </div>

                <div class="person-body">
                  <div class="person-name">
                    {% if p.url %}
                      <a href="{{ p.url | relative_url }}">{{ p.name }}</a>
                    {% else %}
                      {{ p.name }}
                    {% endif %}
                  </div>

                  {% if p.role %}
                    <div class="person-role">{{ p.role }}</div>
                  {% endif %}

                  {% if p.content %}
                    {% capture bio %}{% include_relative {{ p.content }} %}{% endcapture %}
                    <div class="person-topic">{{ bio | markdownify }}</div>
                  {% elsif p.topic %}
                    <div class="person-topic">{{ p.topic }}</div>
                  {% endif %}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endfor %}

    {% else %}
      {{ content }}
    {% endif %}
  </article>
</div>

<style>
/* 分组标题，接近参考网页 */
.people-section-title{
  margin: 1.6rem 0 1rem;
  font-size: 1.35rem;
  font-weight: 800;
}

/* 列表容器 */
.people-list{
  display: flex;
  flex-direction: column;
  gap: 1rem;
}

/* 单条成员：左头像 + 右内容 */
.person-item{
  display: flex;
  align-items: flex-start;
  gap: .9rem;
}

/* 圆形头像 */
.person-avatar img,
.avatar-placeholder{
  width: 56px;
  height: 56px;
  border-radius: 999px;
  object-fit: cover;
  display: block;
  border: 1px solid rgba(0,0,0,.10);
}

/* 没有图片时的占位 */
.avatar-placeholder{
  background: rgba(0,0,0,.04);
}

/* 文本区 */
.person-body{ min-width: 0; } /* 防止长名字撑破布局 */

.person-name{
  font-size: 1.1rem;
  font-weight: 800;
  line-height: 1.2;
  margin: 0 0 .2rem;
}
.person-name a{
  text-decoration: none;
}
.person-name a:hover{
  text-decoration: underline;
}

.person-role{
  font-size: .95rem;
  font-weight: 700;
  margin: 0 0 .2rem;
}

.person-topic{
  font-size: .95rem;
  line-height: 1.4;
  opacity: .9;
}

/* 如果 topic/bio 是 markdown 转出来的 p，去掉多余上下间距 */
.person-topic > :first-child{ margin-top: 0; }
.person-topic > :last-child{ margin-bottom: 0; }
</style>
