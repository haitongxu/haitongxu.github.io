---
layout: page
---
<div class="post">
  <article>
    {% if page.profiles %}
    <div class="profiles-list">
      {% for profile in page.profiles %}
        <div class="profile-row">
          {% if profile.image %}
            {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
            {% include figure.liquid loading="lazy" path=profile_image_path class="avatar-small" alt=profile.image %}
          {% endif %}

          <div class="profile-body">
            {% if profile.name %}<div class="name">{{ profile.name }}</div>{% endif %}
            {% if profile.more_info %}<div class="more">{{ profile.more_info }}</div>{% endif %}
            {% if profile.content %}
              {% capture profile_content %}{% include_relative {{ profile.content }} %}{% endcapture %}
              {{ profile_content | markdownify }}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
    {% endif %}
    <style>
    .profiles-list{
      display:flex;
      flex-direction:column;
      gap:1rem;
    }
    .profile-row{
      display:flex;
      gap:1rem;
      align-items:flex-start;
      padding: .75rem;
      border: 1px solid rgba(0,0,0,.08);
      border-radius: 12px;
    }
    .avatar-small{
      width: 88px;
      height: 88px;
      object-fit: cover;
      border-radius: 999px;
      flex: 0 0 auto;
    }
    .name{font-weight:700;font-size:1.05rem;margin-bottom:.25rem;}
    .more{opacity:.85;margin-bottom:.5rem;}
    </style>
  </article>
</div>
