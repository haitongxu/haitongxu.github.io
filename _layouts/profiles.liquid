---
layout: page
---

<div class="post">
  <article>
    {% if page.profiles %}
      <div class="profiles-grid-5">
        {% for profile in page.profiles %}
          <div class="profile-card">
            {% if profile.image %}
              {% assign profile_image_path = profile.image | prepend: 'assets/img/' %}
              {% include figure.liquid
                loading="lazy"
                path=profile_image_path
                class="profile-photo-square"
                alt=profile.name %}
            {% endif %}

            <div class="profile-meta">
              <div class="profile-name">{{ profile.name }}</div>
              <div class="profile-affiliation">{{ profile.affiliation }}</div>

              {% if profile.content %}
                {% capture bio %}{% include_relative {{ profile.content }} %}{% endcapture %}
                <div class="profile-bio">{{ bio | markdownify }}</div>
              {% elsif profile.bio %}
                <div class="profile-bio">{{ profile.bio | markdownify }}</div>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      {{ content }}
    {% endif %}
  </article>
</div>

<style>
/* —— 5列网格（桌面端） —— */
.profiles-grid-5{
  display: grid;
  grid-template-columns: repeat(5, minmax(0, 1fr)); /* 强制 5 列 */
  gap: .8rem; /* 间距小一点才放得下 5 个 */
  align-items: start;
}

/* 响应式：屏幕变窄自动减少列数 */
@media (max-width: 1200px){
  .profiles-grid-5{ grid-template-columns: repeat(4, minmax(0, 1fr)); }
}
@media (max-width: 992px){
  .profiles-grid-5{ grid-template-columns: repeat(3, minmax(0, 1fr)); }
}
@media (max-width: 768px){
  .profiles-grid-5{ grid-template-columns: repeat(2, minmax(0, 1fr)); }
}
@media (max-width: 480px){
  .profiles-grid-5{ grid-template-columns: 1fr; }
}

/* 卡片更“紧凑”，类似你参考网页那种密度 */
.profile-card{
  border: 1px solid rgba(0,0,0,.10);
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
}

/* 方形图片：占卡片宽度，但通过限制最大高度让它看起来更小 */
.profile-photo-square{
  width: 100%;
  aspect-ratio: 1 / 1;   /* 方形 */
  object-fit: cover;
  display: block;
  max-height: 140px;     /* 关键：让图别太大（你可改 120/130/150） */
}

/* 文字区域更紧凑 */
.profile-meta{
  padding: .65rem .7rem .75rem;
}

.profile-name{
  font-weight: 800;
  font-size: 1.0rem;
  line-height: 1.2;
  margin: 0 0 .2rem 0;
}

.profile-affiliation{
  font-size: .88rem;
  opacity: .85;
  margin: 0 0 .45rem 0;
}

/* 简介不要太长，否则卡片高度差异会很大 */
.profile-bio{
  font-size: .88rem;
  line-height: 1.45;
  display: -webkit-box;
  -webkit-line-clamp: 4;      /* 最多显示 4 行，超出省略 */
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.profile-bio > :first-child{ margin-top: 0; }
.profile-bio > :last-child{ margin-bottom: 0; }
</style>