---
layout: page
---

<div class="post">
  <article>
    {% if page.profiles %}

      {%- assign categories = page.category_order -%}

      {% for c in categories %}
        <h2 class="people-category-title">{{ c }}</h2>

        <div class="people-grid">
          {% for p in page.profiles %}
            {% if p.category == c %}
              <div class="person-card">

                {% if p.image %}
                  {% assign img_path = p.image | prepend: 'assets/img/' %}
                  <img
                    src="{{ img_path | relative_url }}"
                    alt="{{ p.name }}"
                    class="person-photo"
                    loading="lazy">
                {% endif %}

                <div class="person-info">
                  <div class="person-name">{{ p.name }}</div>

                  {% if p.role %}
                    <div class="person-role">{{ p.role }}</div>
                  {% endif %}

                  {% if p.content %}
                    {% capture bio %}{% include_relative {{ p.content }} %}{% endcapture %}
                    <div class="person-topic">{{ bio | markdownify }}</div>
                  {% elsif p.topic %}
                    <div class="person-topic">{{ p.topic }}</div>
                  {% endif %}
                </div>

              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endfor %}

    {% endif %}
  </article>
</div>

